# multimedia keys
XF86Favorites
	mpc toggle
shift + XF86Favorites
	playerctl play-pause
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1000
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1000
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86MonBrightnessUp
	brightnessctl s +5%
XF86MonBrightnessDown
	brightnessctl s 5%-
alt + XF86Favorites
	playerctl play-pause

#applications
super + d
	dmenu_run

super + shift + d
	rofi -show run -modi run,window,drun,ssh

super + p
	rofi-pass

super + shift + m
	dmenu-wrapper-music

super + m
	mpc_control -t

super + b
	brave

super + i
	bukumenu

super + I
	bukuadd
super + z
	zotero
